@model Chapter

@{
  ViewData["Title"] = "View Chapter";
  ViewData["NextChapterId"] = Model.Number < Model.Book.Chapters.Count ? Model.Book.Chapters[Model.Number].Id : 0;
  ViewData["PrevChapterId"] = Model.Number > 1 ? Model.Book.Chapters[Model.Number - 1].Id : 0;
}

<nav>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Books" asp-action="List">Books</a></li>
    @if (Model.Book.Chapters.Count > 1)
    {
      <li class="breadcrumb-item"><a asp-action="List" asp-route-bookId="@Model.Book.Id">@Model.Book.Title</a></li>
    }
    <li class="breadcrumb-item active">@Model.Name</li>
    <li class="ml-auto"><a asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-edit"></i></a></li>
  </ol>
</nav>

@Html.Raw(ViewBag.Html.Text)

@section StyleSheets{
  <style>
    p {
      font-size: 150%;
    }
  </style>
}

@section Scripts {
  <script src="~/lib/is-in-viewport/isInViewport.min.js"></script>
  <script src="~/lib/scrollstop/jquery.scrollstop.js"></script>
  <script>
    $(function () {
      $("h2").addClass("d-none");

      var index = 1;
      $("p").each(function () {
        $(this).attr("data-index", index++);
      });

      if( @ViewBag.Paragraph > 1 )
        $(window).scrollTop($("p[data-index='@ViewBag.Paragraph']").offset().top);

      $(window).on("scrollstop", function () {
        $.ajax({
          url: "@Context.Request.PathBase/Bookmarks/AutoBookmark",
          data: {
            bookId: @Model.BookId,
            chapterId: @Model.Id,
            paragraph: $("p:in-viewport").first().attr("data-index")
          }
        });
      });

      $(document).keyup(function (event) {
        if (event.key == "Escape") {
          if (@Model.Book.Chapters.Count > 1)
            window.location.href = "@Context.Request.PathBase/Chapters/List?bookId=@Model.BookId";
          else
            window.location.href = "@Context.Request.PathBase/Books/List";
        }
        else if (event.ctrlKey && event.key == "b") {
          $.ajax({
            url: "@Context.Request.PathBase/Bookmarks/Set",
            data: {
              chapterId: @Model.Id,
              paragraph: $("p:in-viewport").first().attr("data-index")
            }
          });
        }
        else if (event.which == 39 && @ViewData["NextChapterId"]) {
          window.location.href = "./" + @ViewData["NextChapterId"];
        }
        else if (event.which == 37 && @ViewData["PrevChapterId"]) {
          window.location.href = "./" + @ViewData["PrevChapterId"];
        }
      });
    });
  </script>
}