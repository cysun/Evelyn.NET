@model List<Book>

@{
  ViewData["Title"] = "Books";
}

<nav>
  <ol class="breadcrumb">
    <li class="breadcrumb-item active">Books</li>
    <li class="ml-auto"><a asp-action="Add"><i class="fas fa-plus-circle"></i></a></li>
  </ol>
</nav>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Book</th>
      <th class="d-none d-lg-table-cell">Author</th>
      <th>Updated</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var book in Model)
    {
      <tr>
        <td>
          @if (book.ThumbnailFileId != null)
          {
            <img src="~/Files/View/@book.ThumbnailFileId" alt="thumbnail" />
          }
        </td>
        <td><a asp-action="View" asp-route-id="@book.Id">@book.Title</a></td>
        <td class="d-none d-lg-table-cell">@book.Author</td>
        <td>@book.LastUpdated.ToString("d")</td>
        <td>
          <a asp-action="Edit" asp-route-id="@book.Id" class="mr-3"><i class="fas fa-edit"></i></a>
          @if (book.EBookFileId != null)
          {
            <a asp-controller="Files" asp-action="Download" asp-route-id="@book.EBookFileId"
               class="ml-1"><i class="fas fa-file-download"></i></a>
          }
          else
          {
            <a href="javacript:void(0)">
              <i class="fas fa-cog create-ebook" data-book-id="@book.Id"></i>
            </a>
          }
        </td>
      </tr>
    }
  </tbody>
</table>

@section Scripts{
  <script>
    $(function () {
      $("td").addClass("align-middle");
      $(".create-ebook").click(function () {
        var bookId = $(this).attr("data-book-id");
        var createEBook = $(this);
        $(this).html("<span class='spinner-border spinner-border-sm'></span> Create EBook");
        $(this).prop("disabled", true);
        $.ajax({
          url: "@Context.Request.PathBase/Book/" + bookId + "/EBook/Create",
          success: function (result) {
            var downloadEBook = $("<a href='@Context.Request.PathBase/Files/Download/" + result.fileId + "'>Download EBook</a>").addClass("btn btn-primary");
            createEBook.replaceWith(downloadEBook);
          }
        });
      })
    });
  </script>
}