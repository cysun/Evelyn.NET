@model Book

@{
  ViewData["Title"] = "View Chapter";
}

<nav>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-action="List">Books</a></li>
    @if (Model.Chapters.Count > 1)
    {
      <li class="breadcrumb-item"><a asp-action="View" asp-route-id="@Model.BookId">@Model.Title</a></li>
      <li class="breadcrumb-item active">@ViewBag.Chapter.Name</li>
    }
    else
    {
      <li class="breadcrumb-item active">@Model.Title</li>
    }
    <li class="ml-auto"><a href="./@ViewBag.Chapter.Number/Edit"><i class="fas fa-edit"></i></a></li>
    <li class="ml-4"><i class="far fa-bookmark"></i></li>
  </ol>
</nav>

@Html.Raw(ViewBag.Html.Text)

@section StyleSheets{
  <style>
    p {
      font-size: 150%;
    }
  </style>
}

@section Scripts {
<script>
  $(function () {
    $("h2").addClass("d-none");
  });
</script>
}