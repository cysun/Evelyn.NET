<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Evelyn - @ViewData["Title"]</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.1.1/dist/cyborg/bootstrap.min.css"
        integrity="sha256-bTUCMQdkNAxlJOrCEQEY8H/SjMndxi1/TPFKHNMnLbY="
        crossorigin="anonymous">
  @RenderSection("StyleSheets", required: false)
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body class="container">

  <header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark border-0">
      <div class="container-fluid">
        @if (User.Identity.IsAuthenticated)
        {
          <a class="navbar-brand" asp-controller="Books" asp-action="List">Evelyn Digital Library</a>
        }
        else
        {
          <span class="navbar-brand">Evelyn Digital Library</span>
        }
        @if (User.Identity.IsAuthenticated)
        {
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse">
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="booksDropdown" role="button"
                   data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Books
                </a>
                <div class="dropdown-menu" aria-labelledby="booksDropdown">
                  <a class="dropdown-item" asp-controller="Books" asp-action="Add">New Book</a>
                  <a class="dropdown-item" asp-controller="Books" asp-action="List">All Books</a>
                </div>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Bookmarks" asp-action="List">Bookmarks</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="downloadDropdown" role="button"
                   data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Download
                </a>
                <div class="dropdown-menu" aria-labelledby="downloadDropdown">
                  <a class="dropdown-item" asp-controller="Download" asp-action="AllFiles">All Files</a>
                  <a class="dropdown-item" asp-controller="Download" asp-action="AllMetadata">All Metadata</a>
                </div>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Profile" asp-action="Edit">Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
              </li>
            </ul>
          </div>
        }
      </div>
    </nav>
  </header>

  <main role="main">
    <div class="container p-3">
      @RenderBody()
    </div>
  </main>

  <footer>
    <div class="container text-center">
      <div>&copy; Copyright 2012-2019 by Chengyu Sun.</div>
      <div class="small">
        Icons made by
        <a href="https://www.flaticon.com/authors/popcorns-arts" title="Icon Pond">Icon Pond</a> from
        <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a> is licensed by
        <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a>
      </div>
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"
          integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
          crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
          crossorigin="anonymous"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
