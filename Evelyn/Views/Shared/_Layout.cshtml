<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Evelyn - @ViewData["Title"]</title>
  <link rel="stylesheet" href="~/lib/bootswatch/cyborg/bootstrap.min.css" />
  @RenderSection("StyleSheets", required: false)
  <script defer src="~/lib/fontawesome-5.12.1/all.min.js"></script>
</head>
<body class="container">

  <header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      @if (User.Identity.IsAuthenticated)
      {
        <a class="navbar-brand" asp-controller="Bookmarks" asp-action="List">Evelyn Digital Library</a>
      }
      else
      {
        <span class="navbar-brand">Evelyn Digital Library</span>
      }
      @if (User.Identity.IsAuthenticated)
      {
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" asp-controller="Books" asp-action="List">Books</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Bookmarks" asp-action="List">Bookmarks</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="downloadDropdown" role="button"
                 data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Download
              </a>
              <div class="dropdown-menu" aria-labelledby="downloadDropdown">
                <a class="dropdown-item" asp-controller="Download" asp-action="MarkdownFiles">All Markdown Files</a>
                <a class="dropdown-item" asp-controller="Download" asp-action="BooksMetadata">All Books Metadata</a>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Profile" asp-action="Edit">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
            </li>
          </ul>
        </div>
      }
    </nav>
  </header>

  <main role="main">
    <div class="container p-3">
      @RenderBody()
    </div>
  </main>

  <footer>
    <div class="container text-center">
      <div>&copy; Copyright 2012-2019 by Chengyu Sun.</div>
      <div class="small">
        Icons made by
        <a href="https://www.flaticon.com/authors/popcorns-arts" title="Icon Pond">Icon Pond</a> from
        <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a> is licensed by
        <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a>
      </div>
    </div>
  </footer>

  <script src="~/lib/jquery/jquery.min.js"></script>
  <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
